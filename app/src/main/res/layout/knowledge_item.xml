<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/knowledge_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/knowledge_timeline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:endLineColor="@color/colorPrimary"
        app:lineWidth="4dp"
        app:markerSize="16dp"
        app:startLineColor="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="7dp"
        android:paddingEnd="0dp"
        android:paddingBottom="7dp">
        <TextView
            android:id="@+id/knowledge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/knowledge_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/knowledge_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginTop="3dp"
            android:background="@drawable/runded_button"
            android:textAllCaps="false"
            android:textColor="#FFFF"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>