<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context=".view.activity.QuizDetailActivity">

    <LinearLayout
        android:id="@+id/ln_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="TextView"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/quiz_image"
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln_question"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:text="Pilih Jawaban Yang Paling Tepat"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ln_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/next_quiz_button"
        android:layout_below="@id/tv_order"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/option_card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="5dp">

            <FrameLayout
                android:id="@+id/option_frame1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/answer_textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/option_card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="5dp">

            <FrameLayout
                android:id="@+id/option_frame2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/answer_textview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/option_card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="5dp">

            <FrameLayout
                android:id="@+id/option_frame3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/answer_textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/ln_essay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/next_quiz_button"
        android:layout_below="@id/ln_question"
        android:background="@drawable/card_view_list"
        android:visibility="gone">

    <EditText
        android:id="@+id/essay_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jawaban Essay"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ln_fill_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/next_quiz_button"
        android:layout_below="@id/ln_question"
        android:orientation="vertical"
        android:visibility="gone">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/card_view_list">

            <EditText
                android:id="@+id/fill_et_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jawaban 1"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/card_view_list">

            <EditText
                android:id="@+id/fill_et_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jawaban 2"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/card_view_list">

            <EditText
                android:id="@+id/fill_et_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jawaban 3"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/next_quiz_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_white_button"
        android:text="Simpan Jawaban"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>